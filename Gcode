const greet (args) 
{
    args {

        userType : Number,
        firstName : string ,
        lastName : string
    };


  if( userType = 1)
   {
       return "Validator";
   } 
  else if ( userType = 2)
  {
      return  "Miner";

  }
  else 
  {
       return "Normal user";
  }


};
console.log(greet(1 , "Thank you " + firstName , + lastName ,"for your validation ."));
console.log(greet(2 , "Thank you " + firstName , + lastName ," for keeping the network secure"));
console.log(greet (3,"Thank you " + firstName ,+lastName ,"for using platform ." ));
